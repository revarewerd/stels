<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

       <context:component-scan base-package="ru.sosgps.wayrecall.yandexMock"/>

       <bean id="mongoDBManager" class="ru.sosgps.wayrecall.core.MongoDBManager">
              <property name="databaseName" value="Yandex-mock" />
              <property name="host" value="127.0.0.1:27017" />
       </bean>
       <bean id="paymentBus" class="java.util.concurrent.Executors" factory-method="newCachedThreadPool"/>
</beans>
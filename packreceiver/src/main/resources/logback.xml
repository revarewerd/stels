<configuration debug="false">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
     ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
            <immediateFlush>true</immediateFlush>
        </encoder>
    </appender>

    <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss"/>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>packreceiver-logs/main-${bySecond}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>packreceiver-logs/main-${bySecond}.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>15</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
            <immediateFlush>false</immediateFlush>
        </encoder>
    </appender>

    <property file="${WAYRECALL_HOME}/conf/global.properties"/>

    <appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">

        <smtpHost>${global.sysemail.smtphost}</smtpHost>
        <to>${global.errornotificationAddress}</to>
        <!-- additional destinations are possible -->
        <from>${global.sysemail}</from>
        <username>${global.sysemail.login}</username>
        <password>${global.sysemail.password}</password>
        <asynchronousSending>true</asynchronousSending>
        <STARTTLS>true</STARTTLS>
        <subject>WRC logback: %logger{20} - %m</subject>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level %logger{35} - %message%n</pattern>
        </layout>
    </appender>

    <root level="ERROR">
        <appender-ref ref="EMAIL"/>
    </root>

    <appender name="MAIN_ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE" />
    </appender>

    <appender name="REGEO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>packreceiver-logs/regeo-${bySecond}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>packreceiver-logs/regeo-${bySecond}.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>5</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>1MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
            <immediateFlush>false</immediateFlush>
        </encoder>
    </appender>

    <appender name="REGEO_ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="REGEO_FILE" />
    </appender>

    <appender name="INSERTER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>packreceiver-logs/inserter-${bySecond}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>packreceiver-logs/inserter-${bySecond}.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>15</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
            <immediateFlush>false</immediateFlush>
        </encoder>
    </appender>

    <appender name="INSERTER_ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="INSERTER_FILE" />
    </appender>

    <appender name="RETRANSLATOR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>packreceiver-logs/retranslator-${bySecond}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>packreceiver-logs/retranslator-${bySecond}.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>5</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
            <immediateFlush>true</immediateFlush>
        </encoder>
    </appender>

    <appender name="RETRANSLATOR_ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="RETRANSLATOR_FILE" />
    </appender>


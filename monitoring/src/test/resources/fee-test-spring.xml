<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>file:${WAYRECALL_HOME}/conf/test.properties</value>
            </list>
        </property>
    </bean>

    <bean id="mongoDBManager" class="ru.sosgps.wayrecall.core.MongoDBManager">
        <property name="databaseName" value="${global.defaultmongodb.databaseName}" />
        <property name="host" value="${global.defaultmongodb.host}" />
        <property name="port" value="${global.defaultmongodb.port}" />
    </bean>

    <!--<bean id="objectData" class="ru.sosgps.wayrecall.billing.object.ObjectData" />-->

    <bean id="objectsPermissionsChecker" class="ru.sosgps.wayrecall.security.AllPermissivePermissionsChecker" />

    <bean id="simpleLocalEventsStore" class="ru.sosgps.wayrecall.events.LocalEventsStore" />

    <bean id="tariffPlans" class="ru.sosgps.wayrecall.core.finance.TariffPlans" />

    <bean id="eventBus" class="org.axonframework.eventhandling.SimpleEventBus"/>

    <bean id="feeProcessor" class="ru.sosgps.wayrecall.core.finance.FeeProcessor">
    </bean>

    <bean id="objectsRepositoryReader" class="ru.sosgps.wayrecall.core.ObjectsRepositoryReader"/>

    <bean id="secureGateway" class="ru.sosgps.wayrecall.monitoring.SecureGatewayMock"/>

    <bean class="ru.sosgps.wayrecall.billing.finance.MonthlyPaymentService" />

    <bean class="ru.sosgps.wayrecall.core.MonthlyPaymentStorage" />

</beans>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd   http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">


    <context:component-scan base-package="ch.ralscha.extdirectspring"/>
    <context:component-scan base-package="ru.sosgps.wayrecall.monitoring" use-default-filters="false">
        <context:include-filter type="annotation" expression="ru.sosgps.wayrecall.utils.ExtDirectService"/>
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>
    <!--<context:component-scan base-package="ru.sosgps.wayrecall.data" use-default-filters="false">-->
        <!--<context:include-filter type="annotation" expression="ru.sosgps.wayrecall.utils.ExtDirectService"/>-->
        <!--<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>-->
    <!--</context:component-scan>-->
    <bean id="sleeperMessages" class="ru.sosgps.wayrecall.data.sleepers.SleeperMessages"/>
    <mvc:annotation-driven>
        <mvc:message-converters>
            <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
                <constructor-arg>
                    <ref bean="scalaJsonObjectMapper"/>
                </constructor-arg>
            </bean>

        </mvc:message-converters>
    </mvc:annotation-driven>


    <bean id="loginService" class="ru.sosgps.wayrecall.security.LoginService"/>

    <bean id="terminalGaps" class="ru.sosgps.wayrecall.billing.TerminalMessagesGaps"/>
    <bean id="reportDataProvider" class="ru.sosgps.wayrecall.monitoring.web.ReportDataProvider"/>
    <bean id="objectsGroupStore" class="ru.sosgps.wayrecall.billing.ObjectsGroupStore"/>
    <bean id="permittedObjectsStore" class="ru.sosgps.wayrecall.billing.PermittedObjectsStore"/>
    <bean id="userGroupsOfObjects" class="ru.sosgps.wayrecall.billing.UserGroupsOfObjects"/>
    <bean id="userSupportRequestEDS" class="ru.sosgps.wayrecall.billing.support.UserSupportRequestEDS"/>
    <bean id="supportRequestDAO" class="ru.sosgps.wayrecall.billing.support.SupportRequestDAO"/>
    <bean id="supportEmailNotificationEDS" class="ru.sosgps.wayrecall.billing.support.SupportEmailNotificationEDS"/>
    <bean id="supportEmailNotificationDAO" class="ru.sosgps.wayrecall.billing.support.SupportEmailNotificationDAO"/>

    <import resource="classpath:ru/sosgps/wayrecall/utils/web/extjsstore/EDS-controller-default-config.xml"/>

</beans>
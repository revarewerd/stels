<?xml version="1.0" encoding="UTF-8"?>
<deegreeWMS configVersion="3.0.0" xmlns="http://www.deegree.org/services/wms" xmlns:xlink="http://www.w3.org/1999/xlink"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dgws="http://www.deegree.org/webservices"
  xsi:schemaLocation="http://www.deegree.org/services/wms http://schemas.deegree.org/services/wms/3.0.0/wms_configuration.xsd">

  <ServiceConfiguration>
    <DefaultLayerOptions>
      <FeatureInfoRadius>10</FeatureInfoRadius>
    </DefaultLayerOptions>

    <UnrequestableLayer>
      <Title>PathReport</Title>
      <CRS>EPSG:4326 CRS:84 EPSG:26912</CRS>

        <RequestableLayer>
            <Name>PathReport</Name>
            <Title>PathReport</Title>
            <FeatureStoreId>pathreport</FeatureStoreId>
            <DirectStyle>
                <File>../styles/pathreport.xml</File>
            </DirectStyle>
            <LayerOptions>
                <MaxFeatures>10000000</MaxFeatures>
            </LayerOptions>
        </RequestableLayer>
        
        <RequestableLayer>
            <Name>MovingReport</Name>
            <Title>MovingReport</Title>
            <FeatureStoreId>pathreport</FeatureStoreId>
            <DirectStyle>
                <File>../styles/movingreport.xml</File>
            </DirectStyle>
            <LayerOptions>
                <MaxFeatures>10000000</MaxFeatures>
            </LayerOptions>
        </RequestableLayer>

      <!-- This turns on a statistics layer which displays blue rectangles of all GetMap requests that came in. -->
      <!-- <StatisticsLayer /> -->

    </UnrequestableLayer>

  </ServiceConfiguration>

  <FeatureInfoFormats>
    <GetFeatureInfoFormat>
      <File>html.gfi</File>
      <Format>text/html</Format>
    </GetFeatureInfoFormat>
  </FeatureInfoFormats>

</deegreeWMS>

        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
        <context:exclude-filter type="regex" expression="ru.sosgps.wayrecall.billing.dealer.*"/>
    </context:component-scan>
    <bean class = "ru.sosgps.wayrecall.billing.dealer.DealersBalanceHistoryStoreService"></bean>
    <bean id="sleeperMessages" class="ru.sosgps.wayrecall.data.sleepers.SleeperMessages"/>
    <context:component-scan base-package="ru.sosgps.wayrecall.workflow" use-default-filters="false">
        <context:include-filter type="annotation" expression="ru.sosgps.wayrecall.utils.ExtDirectService"/>
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>
